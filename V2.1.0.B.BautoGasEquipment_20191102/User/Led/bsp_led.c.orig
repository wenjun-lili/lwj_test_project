#include "bsp_led.h"

/**
  *@breif  errorLedInit
	*@datail 故障灯初始化
	*@param  none
	*@retval none
**/
void errorLedInit(void)
{
    GPIO_InitTypeDef  GPIO_InitStructure;

    RCC_APB2PeriphClockCmd(RCC_APB2Periph_GPIOF, ENABLE);

    GPIO_InitStructure.GPIO_Pin = GPIO_Pin_13 ;				//GPIOF13
    GPIO_InitStructure.GPIO_Mode = GPIO_Mode_Out_PP;
    GPIO_InitStructure.GPIO_Speed = GPIO_Speed_50MHz;
    GPIO_Init(GPIOF, &GPIO_InitStructure);

    GPIO_ResetBits(GPIOF,GPIO_Pin_13);  // 初始状态灯为灭掉

}

/**
  *@breif  errorLedDoing
  *@datail 故障灯工作状态 
  *@param  select
           @0：关闭
           @1：打开
  *@retval none
**/
void errorLedDoing(uint8_t select)
{
   switch(select)
	 {
		 case 0:
			 GPIO_ResetBits(GPIOF,GPIO_Pin_13);  // 灭掉
		   break;
		 case 1:
			 GPIO_SetBits(GPIOF,GPIO_Pin_13);  // 亮起
		   break;
		 default:
			 break;		 
	 }
}

